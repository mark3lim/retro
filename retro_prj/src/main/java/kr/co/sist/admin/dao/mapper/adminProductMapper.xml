<!-- 상품 상세 조회 -->
<select id="selectDetailProduct" resultType="apdd" parameterType="String">
select p.PNAME, p.PCANCEL, m.ID, c2.NAME, p.PRICE, p.STATUS,p.INPUT_DATE
from  PRODUCT p, MEMBER m,CATEGORY2 c2,CATEGORY3 c3
where m.id=p.id   and p.C3CODE = c3.C3CODE and c2.C2CODE=c3.C2CODE
and p.pcode=#{ pcode }
</select>

