<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.sist.fake">
	<!-- 컬럼 하나, 행 하나 조회 : dept테이블에서 부서번호를 받아 부서명을 조회 -->
	<select id="fakeSearch" resultType="int" parameterType="fVO">
	select count(*) cnt
	from fake
	<where>
		<if test="fakeKeyword neq null and fakeKeyword neq ''">
			<if test="fakeField eq 'id'">
			id like #{ fakeKeyword }
			</if>
			<if test="fakeField eq 'phone'">
			phone like #{ fakeKeyword }
			</if>
			<if test="fakeField eq 'email'">
			email like #{ fakeKeyword }
			</if>
		</if>
	</where>
	</select>
</mapper>